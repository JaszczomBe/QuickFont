  </PropertyGroup>

  <ItemGroup>
    <None Remove="woodenFont.png" />
    <None Remove="woodenFont.qfont" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="woodenFont.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
