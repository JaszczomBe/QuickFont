  <ItemGroup>
    <ProjectReference Include="..\QuickFont.Desktop\QuickFont.Desktop.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Fonts\Anonymous.ttf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
